#%RAML 0.8
title: Transactor Thor API
version: 1.0
baseUri: http://server/api/{version}

schemas:
 - member: |
    {
      "$schema" : "http://json-schema.org",
      "type": "object",
      "description": "The canonical member representation",
      "properties": {
        "id": {
          "type": "string",
          "required": true
        },
        "firstName": {
          "type": "string",
          "required": true
        },
        "lastName": {
          "type": "string",
          "required": true
        },
        "birthDate": {
          "type": "date",
          "required": true
        }
      }
    }

resourceTypes:
  - collection:
      get:
        responses:
          200:
            body:
              application/json:
                schema: <<schema>>

/members:
  type:  { collection: { schema: member } }
