#%RAML 0.8

# Objective: The following example shows how to apply a security scheme to a method.
# Expected result: no error message and the content from external files are applied respectively

# tags: security schemes, securedBy

title: Dropbox API
version: 1
baseUri: https://api.dropbox.com/{version}
securedBy: [oauth_2_0]
securitySchemes:
    - oauth_2_0: !include ../../resources/securitySchemes/oauth-2-0.yml
    - oauth_1_0: !include ../../resources/securitySchemes/oauth-1-0.yml
/users:
    get:
        securedBy: [oauth_2_0, oauth_1_0]
