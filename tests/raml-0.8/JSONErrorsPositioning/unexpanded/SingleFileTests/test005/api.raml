#%RAML 0.8
title: test API

schemas:
  - MyType: |
      {
        "$schema": "http://json-schema.org/draft-04/",
                   "type": "object",
      "properties": {
                    "arrayProp": {
            "items": {
                       "type": "object",  "properties": {
                "prop1": { "type": "number" },
                             "prop2": { "type": "boolean" }
              },
              "additionalProperties": false
            }
                      }
        }
      }

/res1:
  post:
    body:
      application/json:
        schema: MyType
        example: |
          {
            "arrayProp": [
               {
                         "prop1": 13,
                  "prop2"   :          true
                },          {
              "prop1": 13,
                           "prop2": false
                }
                     ]
          }
/res2:
  post:
    body:
      application/json:
        schema: MyType
        example: |
          {
                     "arrayProp": [
                {
            "prop1": 13,
                          "prop2": false
                    }        , {
                  "prop1": 13,
                        "prop2": 123123
                          }
                 ]
          }
