#%RAML 1.0
title: API

types:
  Type1:
    properties:
      propertyFromType1: string
  Type2:
    properties:
      propertyFromType2: string

resourceTypes:
  ResourceTypeWithParams:
    type: <<resourceTypeParam>>
    get:
      body:
        application/json:
          type: <<bodyTypeParam>>
          properties:
            extraProperty: string

  ResourceType1:
    get:
      body:
        application/json:
          properties:
            propertyFromResourceType1: string

  ResourceType2:
    get:
      body:
        application/json:
          properties:
            propertyFromResourceType2: string

  Resource:
    type:  { ResourceTypeWithParams: {resourceTypeParam : ResourceType1, bodyTypeParam : Type1} }
    get:
      body:
        application/json:
          example:
            propertyFromType1: stringValue1
            propertyFromResourceType1: stringValue2


/resource:
  type: Resource
  get:
    body:
      application/json:
        example:
          extraProperty: stringValue3
